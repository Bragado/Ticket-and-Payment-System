<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="4"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_column="0"
        android:layout_row="0"
        android:layout_gravity="fill"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="0.25"
        android:orientation="vertical">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitXY"
            android:src="@drawable/coffee"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coffee"
            android:textSize="18sp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2€"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/order_coffee_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="x 3" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_add_to_order"
            android:layout_gravity="center_horizontal|bottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_column="1"
        android:layout_row="0"
        android:layout_gravity="fill"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="0.25"
        android:orientation="vertical">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitXY"
            android:src="@drawable/soda"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/soda"
            android:textSize="18sp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2€"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/order_soda_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="x 3" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_add_to_order"
            android:layout_gravity="center_horizontal|bottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="fill"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="0.25"
        android:orientation="vertical">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitXY"
            android:src="@drawable/popcorn"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popcorn"
            android:textSize="18sp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2€"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/order_popcorn_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="x 3" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_add_to_order"
            android:layout_gravity="center_horizontal|bottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_column="1"
        android:layout_row="1"
        android:layout_gravity="fill"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="0.25"
        android:orientation="vertical">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitXY"
            android:src="@drawable/sandwich"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sandwich"
            android:textSize="18sp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2€"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/order_sandwich_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="x 3" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_add_to_order"
            android:layout_gravity="center_horizontal|bottom"/>
    </LinearLayout>

    <Button
        android:id="@+id/button5"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:text="Button"
        android:layout_columnSpan="2"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="0.25" />

    <Button
        android:id="@+id/btn_create_order"
        android:layout_column="0"
        android:layout_row="3"
        android:text="@string/btn_create_order"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:width="250dp"
        android:layout_rowWeight="0.25" />

</GridLayout>